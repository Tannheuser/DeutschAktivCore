@using DeutschAktiv.Web.ViewModels
@model AccountDto

@{
    ViewBag.Title = "Войти";
    Layout = "_LayoutEmpty";
}

<div class="container">
    <form class="form-signin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <img class="logo center-block" src="~/img/logo2.png" alt="logo" asp-append-version="true">
        <h2 class="form-signin-heading center">Вход в систему</h2>
        <label asp-for="UserName" class="sr-only"></label>
        <input type="text" asp-for="UserName" class="form-control" placeholder="Введите имя">
        <span asp-validation-for="UserName" class="text-danger"></span>
        <label asp-for="Password" class="sr-only"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
    <div class="center text-danger" asp-validation-summary="All"></div>
</div>
